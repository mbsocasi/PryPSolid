        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/image_product_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"/>

    <TextView
        android:id="@+id/text_product_name_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IdeaPad"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/image_product_2"
        app:layout_constraintStart_toStartOf="@id/image_product_2"
        app:layout_constraintEnd_toEndOf="@id/image_product_2"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/text_product_price_2"
